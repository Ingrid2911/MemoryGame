<UserControl x:Class="MemoryWPF.View.AddUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MemoryWPF" 
             d:DataContext="{d:DesignInstance Type=local:LoginViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border  BorderBrush="Purple" BorderThickness="10" CornerRadius="5">
        <Grid >
        <Image Source="../Images/AddUser.jpeg"
       Stretch="Fill"
       Panel.ZIndex="0" />

        <!-- Câmp username -->
        <WrapPanel Margin="5,5,10,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock Text="Your name:"
                       VerticalAlignment="Center"
                       Foreground="Black"
                       FontFamily="Segoe Script"
                       FontSize="14"
                       FontWeight="ExtraBold"
                       Margin="0,0,10,0"/>
            <TextBox Name="txtU"
                     Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                     Width="150"
                     Background="#FFE9E0F1"
                     Foreground="Black"
                     BorderBrush="#FFB26FA0"/>
        </WrapPanel>

        <!-- Butoane -->
        <StackPanel Margin="5,40,10,10"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Orientation="Vertical">

            <Button Content="OK"
            Width="100"
            Height="50"
            Margin="10,10,0,10"
            FontFamily="Segoe Script"
            FontSize="20"
            FontWeight="ExtraBold"
            Background="#FFB26FA0"
            Foreground="White"
            BorderBrush="Transparent"
            Command="{Binding Ok}"/>

            <Button Content="Cancel"
            Width="100"
            Height="50"
            Margin="10,20,0,0"
            FontFamily="Segoe Script"
            FontWeight="ExtraBold"
            FontSize="20"
            Background="#FFD8A4C7"
            Foreground="White"
            BorderBrush="Transparent"
            Command="{Binding Cancel}"/>
        </StackPanel>

        </Grid>
    </Border>
</UserControl>
