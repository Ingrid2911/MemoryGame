<Window x:Class="MemoryWPF.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Inside Out Memory Game"
        Height="500" Width="800"
        
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe Script">

    <!-- Fundalul complet -->
    <Grid>
        <Image Source="../Images/mainWindowBackground.jpeg"
               Stretch="Fill"
               Panel.ZIndex="0"
               Grid.RowSpan="2" />
        <!-- Conținutul efectiv al ferestrei -->
        <Grid Panel.ZIndex="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Meniu -->
            <Menu Grid.Row="0"
                  Background="#4F80AF"
                  Foreground="White"
                  FontWeight="ExtraBold"
                  FontFamily="Segoe Script"
                  Height="20"
                  VerticalAlignment="Top">
                <MenuItem Header="Help">
                    <MenuItem Header="About" Background="#4F80AF" Command="{Binding AboutMe}"/>
                </MenuItem>
            </Menu>

            <!-- Conținutul paginii -->
            <ContentControl Grid.Row="1"
                            Content="{Binding CurrentView}"
                            Margin="10"/>
        </Grid>
    </Grid>
</Window>
