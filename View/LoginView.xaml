<UserControl x:Class="MemoryWPF.View.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MemoryWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    
        <Grid Background="Transparent">
        
            
        <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="260"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
        
        <!-- Welcome text -->
            <TextBlock Grid.Row="0"
                       Text="INSIDE OUT - Memory Game"
                       FontSize="28"
                       FontWeight="ExtraBold"
                       FontFamily="Segoe Script"
                       Foreground="Black"
                       HorizontalAlignment="Center"
                       Margin="0,10"
                       />

            <!-- Users panel + user image/selector -->
            <Grid Grid.Row="1" Background="Transparent" Margin="0,10,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- User List -->
                <ContentControl Grid.Column="0"
                                Content="{Binding UsersOrAddUser}"
                                Margin="10"/>

                <!-- Image + arrows -->
                <Grid Grid.Column="1" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Image Grid.Row="0"
                           Source="{Binding CurrentImage}"
                           Width="200"
                           Height="200"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0,10"/>

                    <!-- Arrows -->
                    <Grid Grid.Row="1" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Content="⟨⟨"
                                Width="80"
                                Margin="10,0"
                                Background="#9B5DE5"
                                Foreground="White"
                                FontWeight="ExtraBold"
                                FontSize="16"
                                FontFamily="Segoe Script"
                                BorderBrush="Transparent"
                                Command="{Binding LeftButtonClick}"/>

                        <Button Grid.Column="1"
                                Content="⟩⟩"
                                Width="80"
                                Margin="10,0"
                                Background="#9B5DE5"
                                Foreground="White"
                                FontWeight="ExtraBold"
                                FontSize="16"
                                FontFamily="Segoe Script"
                                BorderBrush="Transparent"
                                Command="{Binding RightButtonClick}"/>
                    </Grid>
                </Grid>
            </Grid>

            <!-- Buttons: Add, Remove, Play, Exit -->
            <Grid Grid.Row="2" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="Adaugă"
                        Width="100"
                        Margin="10"
                        Background="#FFD93D"
                        Foreground="White"
                        FontWeight="ExtraBold"
                        FontSize="16"
                        FontFamily="Segoe Script"
                        BorderBrush="Transparent"
                        Command="{Binding AddUser}"/>

                <Button Grid.Column="1"
                        Content="Șterge"
                        Width="100"
                        Margin="10"
                        Background="#E63946"
                        Foreground="White"
                        FontWeight="ExtraBold"
                        FontSize="16"
                        FontFamily="Segoe Script"
                        BorderBrush="Transparent"
                        Command="{Binding RemoveUser}"/>

                <Button Grid.Column="2"
                        Content="Joacă"
                        Width="100"
                        Margin="10"
                        Background="#3F72AF"
                        Foreground="White"
                        FontWeight="ExtraBold"
                        FontSize="14"
                        FontFamily="Segoe Script"
                        BorderBrush="Transparent"
                        Command="{Binding Play}"/>

                <Button Grid.Column="3"
                        Content="Ieșire"
                        Width="100"
                        Margin="10"
                        Background="#88D498"
                        Foreground="White"
                        FontWeight="ExtraBold"
                        FontSize="14"
                        FontFamily="Segoe Script"
                        BorderBrush="Transparent"
                        Command="{Binding Exit}"/>
            </Grid>
        </Grid>
    
</UserControl>
